<!DOCTYPE html>
<html>
  <head>
    <title>Amazon Webstore</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <header>
      <h2>Welcome to the Amazon Webstore</h2>
      <div class="user">
        <% if current_user %>
          <br>Welcome, <%= current_user.email %>
          <%= link_to 'Signout', destroy_user_session_path, :method => :delete %>
        <% else %>
          <br>
          <%= link_to 'Signup', new_user_registration_path %>
          <%= link_to 'Login', new_user_session_path %>
        <% end %>
      </div>
    </header>

    <main>

      <div class="sidebar">
        <h2><%= link_to "Home", items_path %></h2>
        <h2><%= link_to "Create a new item", new_item_path(@item) %></h2>
        <h2><%= link_to "Cart", carts_path%></h2>
      </div>

      <div class="content">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </main>
  </body>
</html>
